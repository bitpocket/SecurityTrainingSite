	</div>
</div>

<form asp-action="Display1" method="post">
	<div class="form-horizontal">
		<hr/>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="Message" class="col-md-2 control-label"></label>
			<div class="col-md-10">
				<input asp-for="Message" class="form-control"/>
				<span asp-validation-for="Message" class="text-danger" />
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" name="submit" value="Post" class="btn btn-default"/>
			</div>
		</div>
	</div>
</form>

