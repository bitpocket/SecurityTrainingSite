@model SecurityTrainingSite.Models.Display.DisplayViewModel
@{
	ViewData["Title"] = "Display 1";
	string message = ViewBag.message;
	string messageFromQuery = ViewBag.messageFromQuery;
}

<h2>Display 1</h2>
<h4>What should I display? </h4>

<div class="form-group">
	<div class="col-md-offset-2 col-md-10">
		@Html.Raw(message)
