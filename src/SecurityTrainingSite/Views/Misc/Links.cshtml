@using DataAccessLayer
@using SecurityTrainingSite.ViewModels.Misc
@model SecurityTrainingSite.ViewModels.Misc.LinksViewModel

@{
	ViewData["Title"] = "Links";
	List<Link> links = ViewBag.Links;
}

<h2>@ViewData["Title"].</h2>
<h4>Link recommendation</h4>

<div class="row">
	<div class="col-md-8">
		<section>
			<form asp-controller="Home" asp-action="Links" class="form-horizontal">
				<hr />
				<div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Link" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Link" class="form-control" />
						<span asp-validation-for="Link" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Recommend link</button>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>

@if (null != links)
			{
	<hr/>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th width="50%">Recommended links</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Link link in links)
				{
				<tr>
					<td>
						<a href="@link.link">@link.link</a>
					</td>
				</tr>
				}
		</tbody>
	</table>
}

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
