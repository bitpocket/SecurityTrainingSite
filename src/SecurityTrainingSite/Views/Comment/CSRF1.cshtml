@using DataAccessLayer
@model SecurityTrainingSite.Models.Comment.CommentViewModel

@{
	ViewData["Title"] = "CSRF 1";
}
<h2>@ViewData["Title"]</h2>
<h4>Comments</h4>

<div class="row">
	<div class="col-md-8">
		<section>
			<form asp-controller="Comment" asp-action="CSRF1" class="form-horizontal">
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Comment" class="col-md-2 control-label"></label>
					<div class="col-md-10">
						<input asp-for="Comment" class="form-control" />
						<span asp-validation-for="Comment" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<button type="submit" class="btn btn-default">Add Comment</button>
					</div>
				</div>
			</form>
		</section>
	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
